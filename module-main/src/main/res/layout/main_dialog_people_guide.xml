<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp">

            <LinearLayout
                android:id="@+id/ll_guide"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/img_main_people_1"
                android:layout_marginTop="-15dp"
                android:background="@drawable/main_bg_people_guide"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp">

                <ScrollView
                    android:id="@+id/scroll_view_deal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_weight="3"
                    android:fillViewport="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingTop="15dp"
                    android:paddingBottom="@dimen/dp_10"
                    android:scrollbarThumbVertical="@drawable/main_scroll_bar_drawable">

                    <TextView
                        android:id="@+id/tv_deal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/padding_5"
                        android:text="@string/main_str_people_guide_explain"
                        android:textColor="#ff333333"
                        android:textSize="15sp" />
                </ScrollView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/tv_refuse"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/main_btn_refuse_drawable"
                        android:gravity="center"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="不同意"
                        android:textColor="#FFC0BDBD"
                        android:textSize="@dimen/textSize_16" />

                    <TextView
                        android:id="@+id/tv_agree"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="13dp"
                        android:layout_weight="2"
                        android:background="@drawable/middle_bg_default_circel_theme"
                        android:gravity="center"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="同意并继续"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_16" />

                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/img_main_people_1"
                android:layout_width="match_parent"
                android:layout_height="75dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务条款"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="和隐私保护提示"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_main_people"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_people_guide" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/ll_refuse_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_main_people"
                android:layout_marginTop="-3dp"
                android:background="@drawable/main_bg_people_guide_01"
                android:orientation="vertical"
                android:padding="27dp"
                android:visibility="gone">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="欢迎您使用趣白拿"
                    android:textColor="#ff333333"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <TextView
                    android:layout_marginTop="23dp"
                    android:id="@+id/tv_refuse_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/main_str_people_guide_refuse_hint"
                    android:textColor="#ff333333"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp">

                    <TextView
                        android:id="@+id/tv_exit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/main_btn_refuse_drawable"
                        android:gravity="center"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="退出应用"
                        android:textColor="#C0BDBD"
                        android:textSize="@dimen/textSize_16" />

                    <TextView
                        android:id="@+id/tv_look_guide"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="13dp"
                        android:layout_weight="2"
                        android:background="@drawable/middle_bg_default_circel_theme"
                        android:gravity="center"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="同意并使用"
                        android:textSize="@dimen/textSize_16"
                        android:textColor="@color/white" />

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>


    </FrameLayout>
</layout>