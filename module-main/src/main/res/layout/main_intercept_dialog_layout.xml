<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/closure"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:src="@drawable/common_close"
            android:visibility="invisible"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"/>

        <ImageView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:src="@drawable/exit_dialog_zxhb_nhyxjhbwlq"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="386dp"
                android:src="@mipmap/main_exit_red_bg" />

            <RelativeLayout
                android:id="@+id/return_root_layout"
                android:layout_width="270dp"
                android:layout_height="340dp"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                tools:ignore="ResourceName">

                <!--<ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/exit_red_shape" />-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom">

                    <!-- android:background="@mipmap/exit_card_bg" -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="35dp"
                        android:layout_marginEnd="35dp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_tp_flg"
                                android:layout_width="131dp"
                                android:layout_height="26dp"
                                android:layout_gravity="center"
                                android:background="@drawable/main_exit_dialog_not_all_flg"
                                android:gravity="center"
                                android:paddingLeft="5dp"
                                android:paddingTop="3dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="3dp"
                                android:text="专享红包"
                                android:textColor="@color/white"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="你还有现金红包未领取"
                                android:textColor="#764D38"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:visibility="gone" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="90dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="bottom"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="5dp"
                                    android:text="¥"
                                    android:textColor="#E9423E"
                                    android:textSize="28sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="@+id/price"
                                    app:layout_constraintRight_toLeftOf="@+id/price" />

                                <TextView
                                    android:id="@+id/price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="1dp"
                                    android:text="8.8"
                                    android:textColor="#E9423E"
                                    android:textSize="55sp"
                                    android:textStyle="bold"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    tools:ignore="MissingConstraints" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="-35dp"
                                    android:orientation="vertical"
                                    app:layout_constraintRight_toRightOf="@+id/price"
                                    tools:ignore="MissingConstraints">

                                    <TextView
                                        android:id="@+id/hint_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="3dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/exit_shape_max"
                                        android:paddingStart="7dp"
                                        android:paddingTop="2dp"
                                        android:paddingEnd="7dp"
                                        android:paddingBottom="2dp"
                                        android:text="@string/return_intercept_hint"
                                        android:textColor="#FFFFFF"
                                        android:textSize="12dp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <TextView
                                android:id="@+id/hint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="登录参与抽奖，得新人红包"
                                android:textColor="#764D38"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                android:visibility="invisible" />

                            <LinearLayout
                                android:id="@+id/withdraw_hint_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="6dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/withdraw_hint"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="1dp"
                                    android:text="新用户参与抢购可领专享红包"
                                    android:textColor="#764D38"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    android:visibility="invisible" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="185dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/return_button_icon"
                        android:visibility="gone" />

                </RelativeLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/withdraw_des_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="20dp">

                    <TextView
                        android:id="@+id/jump_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginStart="47dp"
                        android:layout_marginEnd="47dp"
                        android:layout_weight="5"
                        android:background="@drawable/panic_buying_button_bg"
                        android:gravity="center"
                        android:paddingTop="9dp"
                        android:paddingBottom="9dp"
                        android:text="立即抢购"
                        android:textColor="#D82D2A"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/masking_hand"
                        android:layout_width="49dp"
                        android:layout_height="51dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="65dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:lottie_loop="true"
                        tools:ignore="MissingConstraints" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/withdraw_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/withdraw_des_ll"
                    android:layout_alignRight="@+id/withdraw_des_ll"
                    android:layout_alignBottom="@+id/withdraw_des_ll"
                    android:layout_gravity="center"
                    android:layout_marginStart="47dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="47dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="新用户参与抢购可领专享红包"
                    android:textColor="#FFEAC7"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="145dp"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    android:src="@mipmap/gold_icon_01"
                    />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="74dp"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    android:src="@mipmap/gold_icon_02" />

                <!-- 图像 -->
                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignParentBottom="true"
                    android:scaleType="fitXY"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="120dp"
                    android:src="@mipmap/gold_icon_02"
                    android:visibility="gone"/>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/protocol_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="18dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/check_box"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="22dp"
                android:background="@drawable/check_checked_bg"
                android:button="@null"
                android:checked="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:text="已阅读并同意"
                android:textColor="#D6D6D6"
                android:textSize="13dp"/>

            <TextView
                android:id="@+id/user_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="《用户协议》"
                android:textColor="#FEDFA7"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="及"
                android:textColor="#D6D6D6"
                android:textSize="13dp"/>

            <TextView
                android:id="@+id/privacy_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="《隐私协议》"
                android:textColor="#FEDFA7"
                android:textSize="13dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_next_lk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="残忍离开"
            android:padding="5dp"
            android:layout_marginTop="-15dp"
            android:layout_marginBottom="26dp"
            android:textColor="#D6D6D6"
            android:visibility="invisible"
            android:textSize="13dp"/>

    </LinearLayout>
</layout>