<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_crazy_item_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/home_crazy_goods_item_pic_iv"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="2dp"
        android:padding="4dp"
        android:scaleType="center"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_crazy_goods_item_des"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="【拍四件】 二阳花椒锅巴零食小吃"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:ignore="MissingConstraints" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/home_crazy_logo_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/home_crazy_item_actprice_rl"
                android:src="@drawable/home_logo_tb" />

            <TextView
                android:id="@+id/home_crazy_item_price_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/home_crazy_item_actprice_rl"
                android:text="原价:"
                android:textColor="#A9AEB1"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/home_crazy_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/home_crazy_item_actprice_rl"
                android:layout_toRightOf="@+id/home_crazy_logo_iv"
                android:text="￥1699"
                android:textColor="#A9AEB1"
                android:textSize="12sp" />

            <RelativeLayout
                android:id="@+id/home_crazy_item_actprice_rl"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:text="￥"
                        android:textColor="#EA443C"
                        android:textSize="12sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/home_crazy_goods_item_price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:maxLines="1"
                        android:text="534.4"
                        android:textColor="#EA443C"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/home_crzay_item_price_bg"
                        android:gravity="center_vertical"
                        android:paddingStart="6dp"
                        android:paddingEnd="8dp"
                        android:text="抢购价"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/home_crzay_goods_item_gift_atv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/home_crazy_item_coupon"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:lines="1"
                        android:maxLines="1"
                        android:paddingStart="5dp"
                        android:paddingTop="3dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="5dp"
                        android:text="50元券"
                        android:textColor="#EA443C"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/home_crazy_item_coupon_get"
                        android:gravity="center"
                        android:paddingTop="2dp"
                        android:paddingBottom="4dp"
                        android:text="领取"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
