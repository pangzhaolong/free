<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/home_crazy_goods_item_pic_iv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@color/A999999"
        android:scaleType="center"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_crazy_goods_item_des"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="【拍四件】 二阳花椒锅巴零食小吃"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:ignore="MissingConstraints" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:layout_width="133dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:background="@drawable/home_top_item_price_bg">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/home_crazy_goods_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="12dp"
                    android:gravity="center_vertical"
                    android:text="￥5344"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    android:gravity="center_vertical"
                    android:text="抢购价"
                    android:textColor="#F53E3C"
                    android:textSize="11sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/home_crzay_item_gift_big_bg"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/home_crzay_goods_item_gift_atv"
                    android:layout_width="60dp"
                    android:layout_height="21dp"
                    android:gravity="center"
                    android:text="￥50元券"
                    android:textColor="#F33838"
                    android:textSize="11sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:background="@drawable/home_crazy_item_gift_bg"
                    android:gravity="center"
                    android:text="领取"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
