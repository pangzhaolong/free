<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/home_top_goods_item_pic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@color/A999999"
        android:scaleType="center"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_top_goods_item_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="【拍四件】 二阳花椒锅巴零食小吃"
            tools:ignore="MissingConstraints" />

        <RelativeLayout
            android:id="@+id/home_top_goods_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_top_goods_item_des"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_top_goods_item_price_atv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="劵后 ￥6.92"
                tools:ignore="MissingConstraints" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_top_goods_item_gift_atv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:text="劵5元" />
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/home_top_goods_item_sales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已售8.7万"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_top_goods_item_shop_atv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二阳旗舰店"
                tools:ignore="MissingConstraints" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_top_goods_item_goshop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="进店>"
                android:textColor="@color/black"
                tools:ignore="MissingConstraints" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>





















