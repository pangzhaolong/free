<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_goods_item_bg"
    android:orientation="vertical">

    <org.raphets.roundimageview.RoundImageView
        android:id="@+id/home_top_goods_item_iv"
        android:layout_width="168dp"
        android:layout_height="168dp"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        app:leftTop_corner_radius="10dp"
        app:rightTop_corner_radius="10dp"
        app:type="round" />

    <TextView
        android:id="@+id/home_top_goods_item_des"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="【返20元猫超卡】 防嗮衣长袖运动外套"
        android:textColor="#2c2c2c"
        android:textSize="16dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/home_top_goods_item_gift_atv"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:background="@drawable/home_search_item_price_bg"
            android:gravity="center"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="%s 元券"
            android:textColor="#F33838"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_top_goods_item_logo_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:src="@drawable/home_logo_tb" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_top_goods_item_price_atv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:gravity="center_vertical|left"
                android:text="￥1699"
                android:textColor="#A9AEB1"
                android:textSize="12sp"
                tools:ignore="RtlHardcoded" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/home_top_goods_item_bottom"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:paddingStart="2dp"
        android:gravity="center"
        tools:ignore="RtlSymmetry">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/home_top_goods_item_char"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="￥"
            android:textColor="#EA443C"
            android:paddingBottom="5dp"
            android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/home_top_goods_item_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="5344"
            android:textColor="#EA443C"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:background="@drawable/home_crzay_item_price_bg"
            android:gravity="center_vertical"
            android:paddingStart="6dp"
            android:paddingEnd="8dp"
            android:text="抢购价"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
