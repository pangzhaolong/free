<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/home_category_vp2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/A999999" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/smart_layout"
            android:layout_width="match_parent"
            android:background="#E9423E"
            android:layout_height="220dp">

            <ImageView
                android:id="@+id/home_jdd_logo_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:src="@drawable/home_jdd_logo"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/home_jdd_title_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_jdd_title"
                app:layout_constraintLeft_toRightOf="@+id/home_jdd_logo_iv"
                tools:ignore="MissingConstraints" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_jdd_tips_atv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠满满福利多多，省钱就是赚钱"
                android:textColor="#FFC8C6"
                app:layout_constraintLeft_toRightOf="@+id/home_jdd_logo_iv"
                app:layout_constraintTop_toBottomOf="@+id/home_jdd_title_iv"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/home_jdd_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/home_jdd_help"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_search_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="80dp"
                android:background="#ffffff"
                android:drawableLeft="@drawable/home_jdd_search"
                android:gravity="center_vertical"
                android:hint="支持搜索淘宝/京东/拼多多优惠"
                app:layout_constraintTop_toBottomOf="@+id/home_jdd_logo_iv"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/home_category_tl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="100dp"
            android:background="@color/white"
            app:tabIndicatorAnimationMode="linear"
            app:tabIndicatorColor="#ff0000" />

    </FrameLayout>

</layout>
