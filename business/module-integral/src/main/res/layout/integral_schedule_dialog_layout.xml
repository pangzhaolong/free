<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingDefaultResource">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/closure"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_above="@+id/content_layout"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginEnd="63dp"
                android:src="@mipmap/closure_icon"
                tools:ignore="MissingConstraints" />


            <RelativeLayout
                android:paddingBottom="80dp"
                android:id="@+id/content_layout"
                android:layout_width="match_parent"
                android:layout_height="371dp"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="30dp"
                    android:src="@mipmap/integral_exit_schedule_bg" />

                <TextView
                    android:id="@+id/experience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="62dp"
                    android:background="@drawable/integral_red_shape"
                    android:paddingStart="28dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="28dp"
                    android:paddingBottom="8dp"
                    android:text="试玩60S领取"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"

                    />

                <TextView
                    android:id="@+id/quit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="放弃福利"
                    android:textColor="#D6D6D6"
                    android:textSize="13dp" />




            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
</layout>