<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints"
    android:paddingTop="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">
    <ImageView
        android:id="@+id/vp_list_icon"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/vp_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/vp_list_icon"
        app:layout_constraintTop_toBottomOf="@+id/vp_list_icon"
        app:layout_constraintRight_toRightOf="@+id/vp_list_icon"
        android:layout_marginTop="5dp"
        android:text="title"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textSize="14sp"/>
    <!-- 卷后 -->
    <LinearLayout
        android:id="@+id/vp_list_pre_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/vp_list_icon"
        app:layout_constraintTop_toBottomOf="@+id/vp_list_title"
        app:layout_constraintRight_toRightOf="@+id/vp_list_icon"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="bottom">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="卷后"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textSize="13sp"
            android:paddingLeft="2dp"
            android:textColor="@color/text_red"/>
        <TextView
            android:id="@+id/vp_list_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="18sp"
            android:paddingLeft="3dp"
            android:textColor="@color/text_red"/>
    </LinearLayout>
    <!-- 各种标签和价格 -->
    <LinearLayout
        android:id="@+id/vp_list_flg_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/vp_list_icon"
        app:layout_constraintTop_toBottomOf="@+id/vp_list_pre_layout"
        app:layout_constraintRight_toRightOf="@+id/vp_list_icon"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="bottom">
        <TextView
            android:id="@+id/vp_list_flg_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="爆款"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textColor="@color/text_red"
            android:background="@drawable/mail_list_item_bord_red"
            android:textSize="13sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="4dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/mail_list_item_bord_red">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卷"
                android:paddingRight="2dp"
                android:textSize="12sp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:textColor="@color/text_red"/>

            <TextView
                android:id="@+id/vp_list_flg_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0元"
                android:paddingLeft="3dp"
                android:paddingRight="4dp"
                android:layout_marginRight="1dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="12sp"
                android:paddingTop="0.5dp"
                android:paddingBottom="0.5dp"
                android:background="@color/text_red"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/vp_list_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已售0|评论0"
        android:textSize="13sp"
        android:paddingBottom="5dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/vp_list_icon"
        app:layout_constraintTop_toBottomOf="@+id/vp_list_flg_layout"/>

</androidx.constraintlayout.widget.ConstraintLayout>
