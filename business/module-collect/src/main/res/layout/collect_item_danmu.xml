<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="30dp">

    <View
        android:id="@+id/stBgView01"
        android:visibility="visible"
        android:background="@drawable/collect_bg_dan_mu"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <View
        android:id="@+id/stBgView02"
        android:alpha="0.3"
        android:visibility="gone"
        android:background="@drawable/collect_bg_alpha3"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical">

        <com.donews.common.views.CircleImageView
            android:id="@+id/stImage"
            android:padding="1dp"
            android:layout_width="28dp"
            android:layout_height="28dp" />

        <TextView
            android:id="@+id/name"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text=""
            android:singleLine="true"
            android:textSize="13sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/doWhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="成功合成出"
            android:singleLine="true"
            android:textSize="13sp"
            android:textColor="#F9B805"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/goodName"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="13sp"
            android:text=""
            android:singleLine="true"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>