<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="23dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="42dp"
                    android:src="@mipmap/congratulations_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="32dp"
                    android:background="@mipmap/streamer_bg_img"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="你已比 "
                        android:textColor="#FFFFFF"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/random_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:text="97.4%"
                        android:textColor="#FFFFFF"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 的人更容易中奖"
                        android:textColor="#FFFFFF"
                        android:textSize="16dp" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/closure"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="23dp"
                    android:src="@mipmap/closure_icon"
                    android:visibility="invisible" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/product_gradient_shape"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="ResourceName">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginEnd="19dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/commodity"
                        android:layout_width="match_parent"
                        android:layout_height="254dp"
                        tools:ignore="MissingConstraints" />

                    <RelativeLayout
                        android:id="@+id/commodityInformation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="21dp"
                        android:layout_marginEnd="19dp"
                        app:layout_constraintLeft_toRightOf="@+id/commodity"
                        tools:ignore="MissingConstraints">

                        <TextView
                            android:id="@+id/title_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:lines="2"
                            android:text="日本进口高含量500mg复合鹅肌肽…"
                            android:textColor="#2C2C2C"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/title_name"
                            android:layout_marginTop="9dp"
                            android:paddingEnd="15dp"
                            android:text="¥ 0"
                            android:textColor="#E9423E"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                    </RelativeLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/another"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="21dp"
                        android:layout_marginEnd="13dp"
                        android:layout_marginBottom="7dp"
                        android:background="@drawable/border_blue_shape"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingStart="22dp"
                        android:paddingEnd="22dp"
                        android:paddingBottom="10dp"
                        android:text="换一个"
                        android:textColor="#8681FF"
                        android:textSize="16dp"
                        tools:ignore="MissingConstraints" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:id="@+id/jump_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="23dp"
                            android:layout_marginTop="21dp"
                            android:layout_marginEnd="23dp"
                            android:layout_marginBottom="7dp"
                            android:background="@drawable/item_lottery_shape"
                            android:gravity="center"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:text="立即抽奖"
                            android:textColor="#FFFFFF"
                            android:textSize="16dp"
                            tools:ignore="MissingConstraints" />

                        <!--小手-->
                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/json_hand"
                            android:layout_width="57dp"
                            android:layout_height="58dp"
                            android:layout_marginEnd="23dp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:lottie_loop="true"
                            tools:ignore="MissingConstraints" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</layout>