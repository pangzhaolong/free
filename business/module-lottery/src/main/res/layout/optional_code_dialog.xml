<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ResourceName">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/closure"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/closure_icon"
            android:visibility="invisible" />

        <RelativeLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/closure"
            android:layout_marginStart="22dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="22dp"
            android:background="@mipmap/optional_code_dialog_bg"
            android:clipChildren="true"
            android:orientation="vertical"
            tools:ignore="ResourceName">


            <LinearLayout
                android:id="@+id/minute_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/hint"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="53dp"
                android:layout_marginBottom="10dp"
                android:clipChildren="true"
                android:gravity="center"
                android:orientation="horizontal">

                <com.module.lottery.view.PickerView
                    android:id="@+id/minute_pv_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.module.lottery.view.PickerView
                    android:id="@+id/minute_pv_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp" />

                <com.module.lottery.view.PickerView
                    android:id="@+id/minute_pv_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp" />

                <com.module.lottery.view.PickerView
                    android:id="@+id/minute_pv_04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp" />

                <com.module.lottery.view.PickerView
                    android:id="@+id/minute_pv_05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp" />

                <com.module.lottery.view.PickerView
                    android:id="@+id/minute_pv_06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp" />

                <com.module.lottery.view.PickerView
                    android:id="@+id/minute_pv_07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="53dp"
                android:background="@drawable/mask_linear_upon_shape"

                />


            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="145dp"
                android:background="@drawable/mask_linear_down_shape"

                />

            <TextView
                android:id="@+id/hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="11dp"
                android:gravity="center"
                android:text="上下滑动选择号码"
                android:textColor="#AA7113"
                android:textSize="12dp" />
        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content_layout"
            android:layout_marginStart="42dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="42dp"
            android:layout_marginBottom="10dp"
            android:paddingBottom="100dp">

            <LinearLayout
                android:id="@+id/lottery_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/red_linear_shape"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingTop="8dp"
                android:paddingEnd="20dp"
                android:paddingBottom="8dp"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/white_play_video_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text="增加中奖率"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>

            <!--小手-->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/jsonHand"
                android:layout_width="57dp"
                android:layout_height="58dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="710dp"
                android:layout_marginBottom="310dp"
                app:layout_constraintRight_toRightOf="parent"
                app:lottie_loop="true"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </RelativeLayout>
</layout>