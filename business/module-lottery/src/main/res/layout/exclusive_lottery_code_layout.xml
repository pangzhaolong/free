<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ResourceName">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/central_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/exclusive_img" />


            <RelativeLayout
                android:id="@+id/return_root_layout"
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                tools:ignore="ResourceName">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginRight="22dp"
                    android:src="@drawable/red_shape" />

                <ImageView
                    android:layout_width="118dp"
                    android:layout_height="173dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="90dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/zu_light" />

                <ImageView
                    android:layout_width="118dp"
                    android:layout_height="173dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="130dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/right_light" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="41dp"
                        android:layout_marginEnd="41dp"
                        android:background="@mipmap/sector_bg"
                        android:orientation="vertical"
                        android:paddingBottom="9dp">

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="4dp"
                            android:gravity="center"
                            android:text="限时登录领取"
                            android:textColor="#E9423E"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/label_01"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:gravity="center"
                                android:text="抽奖码"
                                android:textColor="#8F5625"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <com.module.lottery.view.CountdownView
                                android:id="@+id/countdown_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginEnd="4dp"
                                app:automatically="true"
                                app:time="5" />

                            <TextView
                                android:id="@+id/label_02"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:gravity="center"
                                android:text="后失效"
                                android:textColor="#8F5625"
                                android:textSize="18dp"
                                android:textStyle="bold" />
                        </LinearLayout>


                        <TextView
                            android:id="@+id/lottery_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:background="@mipmap/no_lottery_code_bg"
                            android:gravity="center"
                            android:paddingStart="29dp"
                            android:paddingTop="6dp"
                            android:paddingEnd="29dp"
                            android:paddingBottom="6dp"
                            android:text="2637472"
                            android:textColor="#D17500"
                            android:textSize="27dp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/return_button_icon" />

                </RelativeLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="25dp">

                    <TextView
                        android:id="@+id/tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="50dp"
                        android:background="@drawable/limited_time_bg"
                        android:paddingStart="13dp"
                        android:paddingTop="3dp"
                        android:paddingEnd="13dp"
                        android:paddingBottom="3dp"
                        android:text="中奖率高达90%"
                        android:textColor="#FFFFFF"
                        android:textSize="11dp"
                        app:layout_constraintRight_toRightOf="parent"
                        tools:ignore="MissingConstraints" />

                    <TextView

                        android:id="@+id/jump_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="47dp"
                        android:layout_marginEnd="47dp"
                        android:background="@drawable/panic_buying_button_bg"
                        android:gravity="center"
                        android:paddingTop="9dp"
                        android:paddingBottom="9dp"
                        android:text="立即登录抽奖"
                        android:textColor="#D82D2A"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@id/tips"
                        tools:ignore="MissingConstraints" />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="90dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/gold_icon_01" />


                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="75dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/gold_icon_02"

                    />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/protocol_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingTop="18dp">

                <CheckBox
                    android:id="@+id/check_box"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/check_checked_bg"
                    android:button="@null"
                    android:checked="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:text="已阅读并同意"
                    android:textColor="#D6D6D6"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/user_protocol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="《用户协议》"
                    android:textColor="#FEDFA7"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="及"
                    android:textColor="#D6D6D6"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/privacy_protocol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="《隐私协议》"
                    android:textColor="#FEDFA7"
                    android:textSize="13dp" />

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/closure"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_above="@+id/central_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="23dp"
            android:src="@mipmap/closure_icon"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/central_content"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>