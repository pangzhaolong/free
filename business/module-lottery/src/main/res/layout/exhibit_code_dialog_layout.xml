<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="codeBean"
            type="com.module.lottery.bean.GenerateCodeBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/closure"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_gravity="right"
            android:layout_marginBottom="5dp"
            android:src="@mipmap/closure_icon"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints" />


        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="356dp"
            android:layout_marginTop="63dp"
            android:background="@drawable/red_bg_shape"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints,ResourceName">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="61dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                tools:ignore="ResourceName">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:gravity="center"
                    android:text='@{codeBean!=null?codeBean.code+"":""}'
                    android:textColor="#FFF3C9"
                    android:textSize="47dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:orientation="horizontal">

                        <androidx.coordinatorlayout.widget.CoordinatorLayout
                            android:id="@+id/coordinator_layout"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/progress_reminder"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/exhibit_tips_shape"
                                android:gravity="center"
                                android:paddingStart="6dp"
                                android:paddingTop="4dp"
                                android:paddingEnd="6dp"
                                android:paddingBottom="4dp"
                                android:text="超过11%的用户"
                                android:textColor="#E9423E"
                                android:textSize="11dp"
                                app:layout_behavior="com.module.lottery.behavior.progressBehavior" />

                            <ImageView
                                android:id="@+id/reminder_icon"
                                android:layout_width="8dp"
                                android:layout_height="5dp"
                                android:layout_gravity="bottom"
                                android:scaleType="fitXY"
                                android:src="@mipmap/reminder_icon" />
                        </androidx.coordinatorlayout.widget.CoordinatorLayout>


                        <include
                            android:id="@+id/include_progress_bar"
                            layout="@layout/progress_bar_layout" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="16dp"
                            android:orientation="vertical">


                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/gift_box_off"
                                android:layout_width="49dp"
                                android:layout_height="49dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="0dp"
                                android:scaleType="fitXY"
                                app:lottie_autoPlay="true"
                                app:lottie_loop="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="48dp"
                                android:layout_marginEnd="7dp"
                                android:text="最大中奖率"
                                android:textColor="#FFF3C9"
                                android:textSize="11dp"
                                android:textStyle="bold" />
                        </RelativeLayout>


                    </RelativeLayout>


                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/return_button_bg"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/json_animation_layout"
                    android:layout_width="342dp"
                    android:layout_height="78dp"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="62dp"
                    android:layout_marginEnd="34dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/jsonAnimation"
                        android:layout_width="wrap_content"
                        android:layout_height="47dp"
                        android:scaleType="fitXY"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true" />


                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/jsonAnimation_hand"
                        android:layout_width="63dp"
                        android:layout_height="64dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="8dp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/hint_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="62dp"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="恭喜"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/countdown_hint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/title"
            android:layout_width="198dp"
            android:layout_height="42dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="right"
            android:layout_marginTop="58dp"
            android:layout_marginBottom="5dp"
            android:background="@mipmap/exhibit_top_bg"
            android:gravity="center"
            android:text="恭喜获得抽奖码"
            android:textSize="19dp"
            android:textColor="#764D38"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="110dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/draw_bg_text_shape"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:text="明日10:00开奖"
                android:textColor="#764D38"
                android:textSize="13dp" />

            <ImageView
                android:layout_width="13dp"
                android:layout_height="6dp"
                android:layout_marginStart="25dp"
                android:src="@mipmap/exhibit_triangle"

                />

        </LinearLayout>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="拿6个抽奖码，赢最高中奖率"
            android:textSize="13dp"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/container"
            android:textColor="#D6D6D6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>