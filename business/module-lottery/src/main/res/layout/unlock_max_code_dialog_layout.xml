<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource,ResourceName">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/closure"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_above="@+id/content_layout_"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginEnd="40dp"
            android:src="@mipmap/closure_icon"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/content_layout_"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints" />

        <RelativeLayout
            android:id="@+id/content_layout_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/iv_lh_2"
                android:layout_width="42dp"
                android:layout_height="46dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="35dp"
                android:src="@mipmap/red_fireworks" />

            <ImageView
                android:id="@+id/iv_lh_4"
                android:layout_width="53dp"
                android:layout_height="57dp"
                android:layout_below="@+id/iv_lh_2"
                android:layout_alignParentRight="true"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="50dp"
                android:src="@drawable/main_exit_dialog_winning_yh_r"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/lottery_code_title"
                android:layout_width="279dp"
                android:layout_height="30dp"
                android:layout_below="@+id/iv_lh_2"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="13dp"
                android:src="@mipmap/biggest_win_bg"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/iv_lh_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="33dp"
                android:layout_marginTop="90dp"
                android:src="@drawable/main_exit_dialog_winning_yh_r"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/lottery_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lottery_code_title"
                android:layout_centerHorizontal="true"
                android:text="- 明日10:00开奖 -"
                android:textColor="#FFDC9F"
                android:textSize="13dp"
                tools:ignore="MissingConstraints" />


            <LinearLayout
                android:id="@+id/content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_lh_2"
                android:layout_marginTop="20dp"
                android:clipChildren="false"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="vertical">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/json_light_source"
                        android:layout_width="match_parent"
                        android:layout_height="370dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:lottie_loop="true"
                        tools:ignore="MissingConstraints" />


                    <LinearLayout
                        android:id="@+id/lottery_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="29dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="29dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <LinearLayout
                            android:id="@+id/top_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/lottery_code_one"
                                android:layout_width="0dp"
                                android:layout_height="47dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="1"
                                android:background="@mipmap/crit_card_bg_icon"
                                android:gravity="center"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:text="2637472"
                                android:textColor="#D17500"
                                android:textSize="17dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/lottery_code_two"
                                android:layout_width="0dp"
                                android:layout_height="47dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="1"
                                android:background="@mipmap/crit_card_bg_icon"
                                android:gravity="center"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:text="2637472"

                                android:textColor="#D17500"
                                android:textSize="17dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/lottery_code_three"
                                android:layout_width="0dp"
                                android:layout_height="47dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="1"
                                android:background="@mipmap/crit_card_bg_icon"
                                android:gravity="center"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:text="2637472"
                                android:textColor="#D17500"
                                android:textSize="17dp"
                                android:textStyle="bold" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/top_layout"
                            android:layout_marginTop="13dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/lottery_code_for"
                                android:layout_width="0dp"
                                android:layout_height="47dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="1"
                                android:background="@mipmap/crit_card_bg_icon"
                                android:gravity="center"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:text="2637472"
                                android:textColor="#D17500"
                                android:textSize="17dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/lottery_code_five"
                                android:layout_width="0dp"
                                android:layout_height="47dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="1"
                                android:background="@mipmap/crit_card_bg_icon"
                                android:gravity="center"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:text="2637472"
                                android:textColor="#D17500"
                                android:textSize="17dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/lottery_code_sex"
                                android:layout_width="0dp"
                                android:layout_height="47dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="1"
                                android:background="@mipmap/crit_card_bg_icon"
                                android:gravity="center"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:text="2637472"
                                android:textColor="#D17500"
                                android:textSize="17dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/change"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="54dp"
                    android:layout_marginEnd="54dp"
                    android:background="@drawable/red_linear_shape_360"
                    android:gravity="center"
                    android:paddingTop="9dp"
                    android:paddingBottom="9dp">

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/white_play" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="换个奖品"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="翻倍倒计时："
                        android:textColor="#B3FFFFFF"
                        android:textSize="13dp" />

                    <com.donews.common.views.CountdownView
                        android:id="@+id/countdown_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        app:automatically="false"
                        app:colon_color="#80FFFFFF"
                        app:text_view_millisecond_color="#80FFFFFF"
                        app:text_view_minute_color="#80FFFFFF"
                        app:text_view_second_color="#80FFFFFF"
                        app:time="5" />

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>