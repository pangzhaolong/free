<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/closure"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/closure_icon"
            android:visibility="invisible" />


        <RelativeLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="356dp"
            android:background="@mipmap/not_drawn_bg">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/lottery_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="22dp"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="22dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grey_linear_shape"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:ignore="MissingConstraints">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginStart="8dp"
                        android:gravity="center"
                        android:paddingStart="61dp"
                        android:paddingEnd="61dp"
                        android:text="立即抽奖"
                        android:textColor="#E0551A"
                        android:textSize="18dp"
                        tools:ignore="MissingConstraints" />
                </LinearLayout>

                <!--小手-->
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/jsonHand"
                    android:layout_width="57dp"
                    android:layout_height="58dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="75dp"
                    android:layout_marginBottom="35dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:lottie_loop="true"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/content_layout"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="60dp"
            android:gravity="center"
            android:text="集齐6个码，中奖概率最大"
            android:textColor="#D6D6D6"
            android:textSize="13dp" />

    </RelativeLayout>
</layout>