<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/transparent"
        android:clipChildren="false"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/front_lottery_more_4_rp_close_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:src="@drawable/front_first_guid_lottery_close" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/front_lottery_more_4_rp_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center|bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="再参与"
                    android:textColor="#764D38"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="5"
                    android:textColor="#F33838"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="次抽奖，领取下个红包"
                    android:textColor="#764D38"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/front_lottery_more_4_rp_main_siv"
                android:layout_width="210dp"
                android:layout_height="210dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:scaleType="fitXY"
                app:shapeAppearance="@style/front_rounded_style" />

            <TextView
                android:id="@+id/front_lottery_more_4_rp_desc_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="28dp"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="2"
                android:text="心心相印抽纸24包3层纸巾婴儿卫生纸。。。"
                android:textColor="#2C2C2C"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="28dp">

                <TextView
                    android:id="@+id/front_lottery_more_4_rp_coupon_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="￥24"
                    android:textColor="#F43738"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/front_lottery_more_4_rp_origin_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/front_lottery_more_4_rp_coupon_price_tv"
                    android:text="￥1699"
                    android:textColor="#A9AEB1"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/front_lottery_more_4_rp_info_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="4dp"
                    android:text="累计1.8万人参与抽奖"
                    android:textColor="#A9AEB1"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="28dp"
                android:clipChildren="false">

                <TextView
                    android:id="@+id/front_lottery_more_4_rp_change1_tv"
                    android:layout_width="93dp"
                    android:layout_height="47dp"
                    android:layout_marginStart="18dp"
                    android:background="@drawable/front_lottery_more_4_rp_change1_bg"
                    android:gravity="center"
                    android:text="换一个"
                    android:textColor="#F43B3A"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/front_lottery_more_4_rp_lottery_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="28dp"
                    android:background="@drawable/front_lottery_more_4_rp_lottery_bg"
                    android:gravity="center"
                    android:text="抽奖领红包"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:visibility="invisible" />
    </LinearLayout>
</layout>




















