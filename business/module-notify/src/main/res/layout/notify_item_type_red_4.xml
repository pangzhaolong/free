<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_notifyroot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="15dp"
    android:paddingBottom="25dp"
    tools:ignore="MissingConstraints">

    <ImageView
        android:id="@+id/notify_item_red4_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:padding="10dp"
        android:src="@drawable/glod_reward_close"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/notify_item_red4_rz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="入账金额"
        android:textColor="@color/text_hint_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/notify_item_red4_close" />

    <LinearLayout
        android:id="@+id/notify_item_red4_rz_num_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notify_item_red4_rz"
        android:orientation="horizontal"
        android:gravity="bottom">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:layout_marginBottom="-2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/notify_item_red4_rz_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.6"
            android:layout_marginLeft="5dp"
            android:textSize="28sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/notify_item_red4_name_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingRight="15dp"
        app:layout_constraintLeft_toLeftOf="@+id/notify_item_red4_close"
        app:layout_constraintTop_toBottomOf="@+id/notify_item_red4_rz_num_ll">

        <TextView
            android:id="@+id/notify_item_red4_name_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="收款账户:"/>

        <TextView
            android:id="@+id/notify_item_red4_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="零钱" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/notify_item_red4_good_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="15dp"
        app:layout_constraintLeft_toLeftOf="@+id/notify_item_red4_close"
        app:layout_constraintTop_toBottomOf="@+id/notify_item_red4_name_ll">

        <TextView
            android:id="@+id/notify_item_red4_good_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="收款备注:" />

        <TextView
            android:id="@+id/notify_item_red4_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="收款通知-来自商家转" />
    </LinearLayout>

    <TextView
        android:id="@+id/notify_item_red4_but"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:text="立即领取"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:background="@color/search_hot_main"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notify_item_red4_good_ll" />

</androidx.constraintlayout.widget.ConstraintLayout>