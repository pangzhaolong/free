<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_notifyroot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="15dp"
    android:paddingBottom="25dp"
    tools:ignore="MissingConstraints">

    <ImageView
        android:id="@+id/notify_item_lott2_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:padding="10dp"
        android:src="@drawable/glod_reward_close"
        app:layout_constraintLeft_toLeftOf="parent" />

    <LinearLayout
        android:id="@+id/notify_item_lott2_jp_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/notify_item_lott2_close">
        <ImageView
            android:id="@+id/notify_item_lott2_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/notify_item_lott2_close" />
        <LinearLayout
            android:id="@+id/notify_item_lott2_xj_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/notify_item_lott2_rz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="入账金额"
                android:textColor="@color/text_hint_color"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/notify_item_red4_close" />

            <LinearLayout
                android:id="@+id/notify_item_lott2_num_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:layout_marginBottom="-2dp"/>
                <TextView
                    android:id="@+id/notify_item_lott2_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.6"
                    android:layout_marginLeft="5dp"
                    android:textSize="28sp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/notify_item_lott2_name_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingRight="15dp"
        app:layout_constraintLeft_toLeftOf="@+id/notify_item_lott2_close"
        app:layout_constraintTop_toBottomOf="@+id/notify_item_lott2_jp_ll">

        <TextView
            android:id="@+id/notify_item_lott2_name_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="账户名称:" />

        <TextView
            android:id="@+id/notify_item_lott2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="微信名称"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/notify_item_lott2_good_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="15dp"
        app:layout_constraintLeft_toLeftOf="@+id/notify_item_lott2_close"
        app:layout_constraintTop_toBottomOf="@+id/notify_item_lott2_name_ll">

        <TextView
            android:id="@+id/notify_item_lott2_good_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="备注信息:"/>

        <TextView
            android:id="@+id/notify_item_lott2_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="商品名称"/>
    </LinearLayout>

    <TextView
        android:id="@+id/notify_item_lott2_bug"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:text="立即领取"
        android:gravity="center"
        android:background="@color/search_hot_main"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notify_item_lott2_good_ll" />

</androidx.constraintlayout.widget.ConstraintLayout>