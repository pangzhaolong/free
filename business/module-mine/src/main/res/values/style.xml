<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="ResourceName">

    <style name="HorizontalLine" tools:ignore="ResourceName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/search_bg</item>
    </style>

    <!-- 开奖的数字样式 -->
    <style name="MineWinCodeNum" tools:ignore="ResourceName">
        <item name="android:layout_width">@dimen/mine_win_mun_wh</item>
        <item name="android:layout_height">@dimen/mine_win_mun_wh</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="Dialog_BottomToTopAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_anim_enter</item>
        <item name="android:windowExitAnimation">@anim/bottom_anim_exit</item>
    </style>

    <!-- 开奖记录的球样式 -->
    <style name="UI_RewarHistoryText" parent="android:Animation">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/mine_reward_history_item_num_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">1dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:textSize">21sp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:text">1</item>
    </style>
</resources>