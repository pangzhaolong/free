<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="MissingConstraints">

    <TextView
        android:id="@+id/mine_withdraw_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="name"
        android:layout_marginTop="15dp"
        android:textColor="#2C2C2C"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/mine_withdraw_item_num"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/mine_withdraw_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:textColor="#A9AEB1"
        android:textSize="15sp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/mine_withdraw_item_title"
        app:layout_constraintLeft_toLeftOf="@+id/mine_withdraw_item_title"/>

    <TextView
        android:id="@+id/mine_withdraw_item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+0å…ƒ"
        android:textColor="#E9423E"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"/>

    <View
        style="@style/HorizontalLine"
        android:layout_width="0dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/mine_withdraw_item_time"
        app:layout_constraintRight_toRightOf="@+id/mine_withdraw_item_num"
        app:layout_constraintLeft_toLeftOf="@+id/mine_withdraw_item_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>
