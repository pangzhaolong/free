<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mine_f6f9fb"
        tools:ignore="MissingConstraints"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/mine_par_recod_titlle_ll"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="参与记录"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/mine_par_recod_back"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:src="@drawable/common_back_black"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingRight="20dp"/>
        </FrameLayout>
        <com.donews.mine.views.refresh.RefeshLayout
            android:id="@+id/mine_par_recod_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/mine_par_recod_titlle_ll"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </LinearLayout>
</layout>
