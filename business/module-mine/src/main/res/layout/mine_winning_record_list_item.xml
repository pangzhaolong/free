<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:skin="http://schemas.android.com/res/android/skin"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="7dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="7dp"
    android:background="@drawable/ad_shape_bg"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:paddingRight="15dp"
    android:paddingBottom="20dp"
    tools:ignore="MissingConstraints">

    <!-- 标题 -->
    <LinearLayout
        android:id="@+id/mine_win_item_t_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mine_win_item_title_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20200101期"
            android:textColor="@color/text_hint_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/mine_win_item_title_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="开奖码："
            android:textSize="13sp" />

        <TextView
            android:id="@+id/mine_win_item_title_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2012314"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/mine_win_item_line"
        style="@style/HorizontalLine"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/mine_win_item_t_layout"
        app:layout_constraintRight_toRightOf="@+id/mine_win_item_t_layout"
        app:layout_constraintTop_toBottomOf="@+id/mine_win_item_t_layout" />

    <!-- 奖品类型 -->
    <LinearLayout
        android:id="@+id/mine_win_item_win_type_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/mine_win_item_t_layout"
        app:layout_constraintRight_toRightOf="@+id/mine_win_item_t_layout"
        app:layout_constraintTop_toBottomOf="@+id/mine_win_item_line">

        <TextView
            android:id="@+id/mine_win_item_win_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="幸运奖"
            android:textColor="@color/mine_e65155"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mine_win_item_win_type_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="已领取"
            android:textColor="@color/text_hint_color"
            android:textSize="11sp" />
    </LinearLayout>
    <!-- 商品区 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mine_win_item_good_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/mine_f6f9fb"
        app:layout_constraintLeft_toLeftOf="@+id/mine_win_item_win_type_layout"
        app:layout_constraintRight_toRightOf="@+id/mine_win_item_win_type_layout"
        app:layout_constraintTop_toBottomOf="@+id/mine_win_item_win_type_layout">

        <ImageView
            android:id="@+id/mine_win_item_good_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mine_win_item_good_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="商品名称"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/mine_win_item_good_icon"
            app:layout_constraintTop_toTopOf="@+id/mine_win_item_good_icon" />

        <TextView
            android:id="@+id/mine_win_item_good_pic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="￥1"
            android:textColor="@color/mine_red_default"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/mine_win_item_good_icon"
            app:layout_constraintLeft_toLeftOf="@+id/mine_win_item_good_name"
            app:layout_constraintTop_toBottomOf="@+id/mine_win_item_good_name" />

        <LinearLayout
            android:id="@+id/mine_win_item_snap_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/mine_win_item_good_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mine_win_item_good_icon">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="抢购码："
                android:textSize="13sp" />

            <TextView
                android:id="@+id/mine_win_item_snap_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0123456"
                android:textStyle="bold"
                android:maxLines="2"
                android:textSize="16sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/mine_win_item_goto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即抢购"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="15dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/mine_shape_winning_goto_read"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>