<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="progressColor" format="color|reference" />

    <!--圆弧进度条-->
    <declare-styleable name="CommonCircleProgressBar">
        <attr name="common_radius" format="dimension" />
        <attr name="common_strokeWidth" format="dimension" />
        <attr name="common_ringColor" format="color" />
        <attr name="common_strokeBgColor" format="color" />
        <attr name="common_progress" format="integer" />
    </declare-styleable>


    <declare-styleable name="ProgressScaleView">
        <attr name="progressMax" format="integer" />
        <!--进度条padding-->
        <attr name="proPadding" format="dimension" />
        <attr name="progress" format="integer" />
        <attr name="proInterval" format="dimension" />
        <attr name="progressHeight" format="dimension" />
        <!--是否显进度条上面的刻度-->
        <attr name="proShowScale" format="boolean" />
        <!--刻度距离下面进度条的距离-->
        <attr name="scaleDistance" format="dimension" />
        <!--刻度字体大小-->
        <attr name="scaleFontSize" format="dimension" />
        <!--刻度颜色值-->
        <attr name="scaleFontColor" format="color|reference" />
        <!--刻度比，一刻度表示多少值，默认1:1-->
        <attr name="scaleThan" format="integer" />
        <attr name="proBackgroundColor" format="color|reference" />
        <attr name="progressDefaultColor" format="color|reference" />
        <attr name="progressColor" />
    </declare-styleable>


    <declare-styleable name="CircleProgressBarView">
        <attr name="circleBgStrokeWidth" format="dimension" />
        <attr name="progressStrokeWidth" format="dimension" />
        <attr name="circleBgColor" format="color" />
        <attr name="progressColor" />
        <attr name="circleAnimationDuration" format="integer" />
        <attr name="isDrawCenterProgressText" format="boolean" />
        <attr name="centerProgressTextColor" format="color" />
        <attr name="centerProgressTextSize" format="dimension" />
    </declare-styleable>


    <declare-styleable name="CountdownView" >
        <attr name="time" format="integer" /><!--倒计时总时间-->
        <attr name="automatically" format="boolean" /><!--倒计时总时间-->
        <attr name="text_view_minute_bg" format="reference" /><!--分钟背景颜色-->
        <attr name="text_view_second_bg" format="reference" /><!--秒背景颜色-->
        <attr name="text_view_millisecond_bg" format="reference" /><!--毫秒背景颜色-->
        <!--  设置文字颜色-->
        <attr name="text_view_second_color" format="reference|color" /><!--秒 文字颜色-->
        <attr name="text_view_minute_color" format="reference|color" /><!--秒 文字颜色-->
        <attr name="text_view_millisecond_color" format="reference|color" /><!--毫秒 文字颜色-->
        <!-- 冒号颜色-->
        <attr name="colon_color" format="reference|color" /><!--毫秒 文字颜色-->

    </declare-styleable>


</resources>