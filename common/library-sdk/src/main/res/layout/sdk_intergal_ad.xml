<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_app_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/iv_app_logo"
            android:text="试用充电得奖领取"
            android:textColor="#ff666666"
            android:textSize="14sp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="试用APP30秒，赚取0.3元"
        android:textColor="#ff333333"
        android:textSize="18sp"
        android:textStyle="bold" />

    <com.dn.sdk.widget.progressbtn.ProgressButton
        android:id="@+id/pro_btn"
        android:layout_width="160dp"
        android:layout_height="41dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="21dp"
        android:background="@drawable/sdk_integral_ad_btn"
        android:gravity="center"
        android:text="立即下载"
        app:progressbtn_background_second_color="@android:color/white"
        app:progressbtn_background_color="@color/sdk_integral_red" />


</LinearLayout>