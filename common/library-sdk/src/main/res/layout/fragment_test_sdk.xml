<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="ResourceName">

        <LinearLayout
            android:id="@+id/ll_fill_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <Button
                android:id="@+id/btn_load"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="加载激励视频" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_reward_video_pre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预加载激励视频" />

                <Button
                    android:id="@+id/btn_reward_video_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="播放激励视频" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_load_full"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="加载全屏视频"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <Button
                    android:id="@+id/btn_full_video_pre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预加载全屏视频" />

                <Button
                    android:id="@+id/btn_full_video_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预加载显示全屏视频" />
            </LinearLayout>




            <FrameLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_load_news_feed_template"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="信息流模板广告"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_load_news_feed_render"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="信息流自渲染广告"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_interstitial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="插屏"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Banner"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_new_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="当前是：新用户(点击变老)" />


        </LinearLayout>
    </LinearLayout>
</layout>