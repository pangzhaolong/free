<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/parent_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <RelativeLayout
            android:id="@+id/child_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_ad_title"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="16sp"
                tools:text="标题" />

            <FrameLayout
                android:id="@+id/rl_ad_content"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/tv_ad_title"
                android:layout_marginTop="10dp">

                <FrameLayout
                    android:id="@+id/fl_ad_video"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_ad_iamge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/iv_ad_logo"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom|right"
                    android:visibility="gone" />
            </FrameLayout>


            <TextView
                android:id="@+id/tv_ad_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_ad_content"
                android:layout_centerInParent="true"
                android:text=""
                android:textColor="@android:color/black"
                tools:text="广告描述" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>